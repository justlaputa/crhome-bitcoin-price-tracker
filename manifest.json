{
  "manifest_version": 2,
  "name": "Bitcoin price traker",
  "description": "Track bitcoin price and show in extension icon badge",
  "version": "1.0",
  "background": {
    "scripts": [
      "bitflyer-api.js",
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": ""
  },
  "permissions": [
    "https://api.bitflyer.jp/v1/*",
    "activeTab",
    "alarms",
    "storage"
  ]
}